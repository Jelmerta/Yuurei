            <Button
                android:id="@+id/keyboard_n"
                android:text="n"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/keyboard_text_height" />

            <Button
                android:id="@+id/keyboard_m"
                android:text="m"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/keyboard_text_height" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>