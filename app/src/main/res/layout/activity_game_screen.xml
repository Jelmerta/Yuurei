                android:layout_height="@dimen/keyboard_text_height" />

            <Button
                android:id="@+id/keyboard_l"
                android:text="l"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/keyboard_text_height" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/keyboard_row3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/keyboard_z"
                android:text="z"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/keyboard_text_height" />

            <Button
                android:id="@+id/keyboard_x"
                android:text="x"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/keyboard_text_height" />

            <Button
                android:id="@+id/keyboard_c"
                android:text="c"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/keyboard_text_height" />

            <Button
                android:id="@+id/keyboard_v"
                android:text="v"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/keyboard_text_height" />

            <Button
                android:id="@+id/keyboard_b"
                android:text="b"
                android:textSize="@dimen/keyboard_text_size"
                android:layout_weight="0.1"
