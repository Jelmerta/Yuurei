<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.Ghost" >

    <application
        android:fullBackupContent="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.TitleScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GameScreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.WinScreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.SettingScreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.HighscoreScreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.ExplanationScreen"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.PlayerListView"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
